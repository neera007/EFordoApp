<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/stock_empty_fragment"
    android:background="@color/lColor700"
    xmlns:app="http://schemas.android.com/apk/res-auto"
  >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="5dp"
        android:orientation="vertical">
        <!-- todo 1st layer -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:gravity="left"
                android:layout_weight="3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingTop="5dp">
                <TextView
                    android:id="@+id/tvProductName"
                    style="@style/FontBold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:text="Parrot Green Embroidered Silk Saree"
                    android:textColor="@color/darkColor900"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutDelete"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:padding="10dp"
                >

            </LinearLayout>
        </LinearLayout>
        <!--todo 2nd layer -->
        <LinearLayout
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_weight="1"
                android:gravity="left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tvProductCode"
                    style="@style/FontRegular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SKU #0540000016608"
                    android:textColor="@color/darkColor900"
                    android:textSize="14sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:gravity="right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tvSizeTitle"
                    style="@style/FontRegular"
                    android:gravity="right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Size: "
                    android:textColor="@color/darkColor900"
                    android:textSize="14sp" />
                <TextView
                    android:id="@+id/tvProductSize"
                    style="@style/FontRegular"
                    android:gravity="right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="38"
                    android:textColor="@color/darkColor900"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>
        <!--todo 3rd layer -->

        <View
            android:id="@+id/viweBorder"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/lColor500"/>
    </LinearLayout>

</RelativeLayout>
