<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/stock_empty_fragment"
    android:background="@color/lColor700"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="5dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="58dp"
                android:layout_height="70dp"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="12dp"
                android:layout_marginRight="0dp"
                android:layout_marginBottom="8dp"
                />
            <!--1st-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="8dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvProductName"
                    style="@style/FontBold"
                    android:maxLines="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Moyda"
                    android:textColor="@color/darkColor900"
                    android:textSize="16sp"/>
                <!--2nd-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tvProductCode"
                        style="@style/FontRegular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="38dp"
                        android:text="Unit : 1 kg"
                        android:textColor="@color/darkColor900"
                        android:textSize="14sp" />
                </LinearLayout>
                <!--3rd-->
                <LinearLayout
                    android:layout_marginTop="6dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="3">
                        <TextView
                            android:id="@+id/tvTotalQty"
                            style="@style/FontRegular"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" à§³: "
                            android:textColor="@color/darkColor900"
                            android:textSize="14sp"/>
                        <TextView
                            android:id="@+id/tvPrice"
                            style="@style/FontRegular"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="100"
                            android:textColor="@color/darkColor900"
                            android:textSize="14sp"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:layout_marginRight="8dp">
                        <TextView
                            android:id="@+id/tvSizeTitle"
                            style="@style/FontRegular"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Unit: "
                            android:textColor="@color/darkColor900"
                            android:textSize="14sp"/>
                        <TextView
                            android:id="@+id/tvUnit"
                            style="@style/FontRegular"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="32"
                            android:textColor="@color/darkColor900"
                            android:textSize="14sp"
                            android:layout_toRightOf="@id/tvSizeTitle"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <!--todo 3rd layer -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:weightSum="4"
            android:orientation="horizontal">
            <LinearLayout
                android:visibility="invisible"
                android:gravity="left"
                android:layout_weight="2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/tvAmountTitle"
                    style="@style/FontRegular"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Tk: "
                    android:textSize="16sp"
                    android:textColor="@color/pColor300"/>
                <TextView

                    android:id="@+id/tvAmount"
                    style="@style/FontRegular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="34,430.00"
                    android:textColor="@color/pColor300"
                    android:textSize="16sp"
                    tools:ignore="DuplicateIds" />
            </LinearLayout>

            <!-- todo plus minus qty button -->
            <LinearLayout
                android:gravity="right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2">
                <TextView
                    android:id="@+id/tvQtyTitle"
                    style="@style/FontRegular"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Qty"
                    android:paddingRight="12dp"
                    android:paddingLeft="12dp"
                    android:textColor="@color/darkColor900"
                    android:textSize="14sp" />
                <Button
                    android:id="@+id/btnMinus"
                    style="@style/FontRegular"
                    android:layout_width="48dp"
                    android:layout_height="wrap_content"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:text="-"
                    android:textSize="30dp"
                    android:background="@drawable/ic_btn_minus"/>

                <TextView
                    android:id="@+id/tvItemQty"
                    style="@style/FontRegular"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:gravity="center"
                    android:text="0"
                    android:textSize="14sp"
                    android:textColor="@color/darkColor900"
                    android:background="@drawable/shape_point_add_or_delete"/>
                />
                <Button
                    android:id="@+id/btnPlus"
                    style="@style/FontRegular"
                    android:layout_width="48dp"
                    android:layout_height="match_parent"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:text="+"
                    android:textSize="20dp"
                    android:background="@drawable/ic_btn_plus"/>
            </LinearLayout>
        </LinearLayout>
        <View
            android:id="@+id/viweBorder"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/lColor500"/>
    </LinearLayout>

</RelativeLayout>
